{% extends 'admin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    
 <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1>Evenement</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_event') }}">Retour</a>
            <a href="{{ path('admin_event_new') }}" class="btn btn-sm btn-outline-primary">Ajouter un Event</a>
            <a href="{{ path('admin_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">Ã‰diter</a>
            {{ include('admin/event/_delete_form.html.twig') }}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Adherent Conserne</th>
                <td>{{ event.adherent }}</td>
            </tr>
            <tr>
                <th>logo</th>
                <td><img class="bqimage" src=" /images/{{ asset( event.logo ) }}"></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="bqimage" src=" /images/{{ asset( event.media ) }}"></td>
            </tr>
            <tr>
                <th>Url Social media</th>
                <td> <a href="{{ event.socialmeida}}">{{ event.socialmeida }}</a></td>
            </tr>
            <tr>
                <th>Type Evenement</th>
                <td>{{ event.category }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
