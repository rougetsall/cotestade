{% extends 'admin.html.twig' %}

{% block title %}Ajouter Privatisation{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1>Ajouter un lieu privatisable</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('admin_privatisation') }}" class="btn btn-sm btn-outline-primary">Retour</a>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_row(form.address) }}
        </div>
        <div class="form-group">
            {{ form_row(form.capacite) }}
        </div>
        <div class="form-group">
            {{ form_row(form.file) }}
        </div>
        <div class="form-group">
            {{ form_row(form.surface) }}
        </div>
        <div class="form-group">
            {{ form_row(form.service) }}
        </div>
        <div class="form-group">
            {{ form_row(form.annonce) }}
        </div>
        <div class="form-group">
            {{ form_row(form.adherent) }}
        </div>

        <button class="btn btn-sm btn-outline-primary">{{ button_label|default('Ajouter') }}</button>
        {{ form_end(form) }}

    {% else %}
        {{ include('admin/privatisation/_form.html.twig') }}
    {% endif %}


{% endblock %}