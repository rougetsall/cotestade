<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    <link rel="stylesheet" href="https://unpkg.com/@splidejs/splide/dist/css/splide.min.css">
    <title>{{ titrecom }}</title>
</head>
<body>

    <div>

        <div class="container-page">
            <div class="container-title">
                <h1 class="title-page">{{ titrecom }}</h1>
                <a id="retour" href="{{ path('home') }}">
                <span class="arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M15 17L10 12L15 7" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </span>
                </a>
            </div>
            <div id="slider" class="splide">
                <div class="splide__track">
                    <ul class="splide__list">
                            {% for shop in shops %}
                             <li class="splide__slide" data-url="{{ shop.adherent.url }}">
                                    <div id="card-2" class="card">
                                        <div class="img-card-container">
                                            <a href="{{ path('adherent_show', {'id': shop.adherent.id}) }}" class="shop-card__thumbnail">  
                                                    <img  class="image-css" src="{{ asset( 'images/' ~  shop.media ) }}" alt="Logo"/>
                                            </a>
                                            {# <img class="image-css" src="image/background.png" alt=""> #}
                                        </div>
                                        <div class="container-info">
                                            <h2 class="subtitle-photo">{{ shop.title }}</h2>
                                            <div class="bottom-photo">
                                               <a href="#" class="photo-button">
                                                   <img src="{{ asset( 'icons/calendar-07.svg' ) }}" style="margin-top: 2px;">
                                                    <span> {{ shop.date| date('m/d/Y') }}<br>   </span>
                                                </a>
                                                <a href="http://www.google.com/maps?q={{ shop.address  }}" class="photo-button">
                                                    <img src="{{ asset( 'icons/ping.svg' ) }}">
                                                    <span>{{ shop.address }}</span>
                                                </a>
                                                
                                                <a href="{{ path('adherent_show', {id: shop.adherent.id}) }}" target="_blank" class="photo-button">
                                                   <img src="{{ asset( 'icons/user-profile-03.svg' ) }}" style="margin-top: 2px;">
                                                    <span>{{ shop.adherent }}<br/></span>
                                                </a>
                                            </div>
                                        </div>
                                       
                                    </div>
                                 
                                </li>
                            {% endfor %}
                        
                    </ul>
                </div>
            </div>

            <div class="content-buttons">
                 <div class="center-buttons-resa">
        <button class="resa-button"><a href="#" id="reserve-button">Réserver</a></button>
    </div>
            </div>
            
            
    
           <div class="container-nav">
                <nav class="bottom-nav">
                    <a href="{{ path('shops') }}" class="nav-button">
                        <img  src="{{ asset( 'icons/commerces.svg' ) }}">
                        <span style="color: #999;" >Commerces</span>
                    </a>
                    <a href="{{ path('events_to_bonplan') }}" class="nav-button">
                        
                        <img src="{{ asset( 'icons/bons-plans.svg' ) }}">
                        <span style="color: #999;">Bons plans</span>
                    </a>
                    <a href="{{ path('events_to_come') }}" class="nav-button">
                        <img src="{{ asset( 'icons/calendar.svg' ) }}">
                        <span >Événements</span>
                    </a>
                </nav>
            </div>
        </div>



    </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        //console.log('hello');  // Check if JS is loading

        var splideElement = document.querySelector('.splide');
        var reserveButton = document.getElementById('reserve-button');

        if (splideElement) {
            var splide = new Splide(splideElement, {
                type       : 'loop',
                perPage    : 1,
                pagination : false,
                arrows     : true,
            }).mount();

            // Function to update the button href
            function updateReserveButton() {
                var activeSlide = document.querySelector('.splide__slide.is-active');
                if (activeSlide) {
                    var shopUrl = activeSlide.getAttribute('data-url');
                    reserveButton.setAttribute('href', shopUrl);
                }
            }

            // Initial load
            updateReserveButton();

            // Update the button when the slide changes
            splide.on('moved', updateReserveButton);
        }
    });
</script>




    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html, body {
            height: 100%;
            overflow: hidden; /* Empêche le scroll */
            font-family: Arial, Helvetica, sans-serif;
            background-color: #ededed;
        }

        .subtitle-photo{
            margin: auto;
        }

        .container-page{
            height: 100dvh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .container {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
            margin: 0px 15px;
        }

        .container-info{
            background-color: #fff;
            border-bottom-left-radius: 30px; /* Ajustez la valeur selon vos besoins */
            border-bottom-right-radius: 30px;
        }

        .splide__slide {
            padding: 0 4px;
        }

        .card{
            display: flex;
            flex-direction: column;
            justify-content: end;
            height: 100%;
            width: 80vw;
            padding: 10px; /* Ajout de padding */
        }
        
        .title-text{
            font-weight: 600;
            font-size: 8vw;
            width: 90%;
            display: flex;
            margin: auto;
        }

        .bottom-nav {
            display: flex;
            justify-content: space-between;
            background-color: black;
            padding: 10px 0;
            margin-bottom: 10px; /* Espace en bas de la page */
            border-radius: 35px;
        }
        
        .nav-button {
            flex: 1;
            text-align: center;
            padding: 10px 0;
            display: flex;
            flex-direction: column;
            font-size: 3.5vw;
        }
        
        .nav-button img {
            width: 24px; /* Taille des icônes */
            height: 24px;
            margin: auto;
            margin-bottom: 2px;
        }

        .bottom-photo {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            color: black;
            margin-bottom: 10px; /* Espace en bas de la page */
            border-radius: 35px;
        }

        .photo-button {
            flex: 1;
            text-align: center;
            justify-content: end;
            padding: 10px 0;
            display: flex;
            flex-direction: column;
            font-size: 3.5vw;
            color: black;
        }
        
        .photo-button img {
            width: 24px; /* Taille des icônes */
            height: 24px;
            margin: auto;
            margin-bottom: 2px;
            display: flex;
            justify-content: end;
        }

        .subtitle-photo{
            font-size: 16px;
            font-weight: normal;
            margin: auto;
            display: flex;
            justify-content: center;
            margin: 10px;
            text-align: center;
        }

        .img-card-container{
            height: 100%;
        }

        .image-css{
            margin: auto;
            display: flex;
            border-radius: 20px 20px 0px 0px;
            width: 100%;
            height: 100%;
        }
        
        a{
            text-decoration: none;
            color: white;
        }

        .container-title {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            width: 100%;
            padding: 20px 0px;
        }
        
        .title-page {
            flex: 1;
            text-align: center;
            font-size: 7vw;
            font-weight: normal;
        }
        
        .arrow {
            position: absolute;
            left: 5%; /* Ajustez la valeur pour positionner le span à droite */
        }

        /* Custom CSS for Splide */
        .splide__track {
            padding: 0 20px;
            overflow: visible;
        }

        .splide__list {
            display: flex;
        }

        .splide__slide {
            flex: 0 0 50%; /* Ajusté pour montrer moins des cartes voisines */
            transition: transform 0.5s;
        }

        .splide__arrows {
            display: none;
        }

        /* Cacher les points d'indication de position */
        .splide__pagination {
            display: none;
        }

        .center-buttons-resa {
            display: flex;
            height: 100%;
            justify-content: center;
            align-items: center;
        }
        .content-buttons{
            display: flex;
            justify-content: center;
        }
        .resa-button {
            flex: 1;
            padding: 10px 40px;
            text-align: center;
            background-color: #b3a0ff7f;
            color: rgb(0, 0, 0);
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-weight: 500;
            font-size: 4vw;
            width: 150px;
            height: 40px;
        }

        .resa-button a{
            color:black;
        }

        .container-nav {
            display: flex;
            flex-direction: column;
            justify-content: end;
            margin: 0px 15px;
           
        }

    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new Splide('#slider', {
                type      : 'loop',
                perPage   : 1,
                focus     : 'center',
                autoplay  : false,
                gap       : '', // Espace entre les slides
                padding   : '0%', // Augmenté pour plus de décalage
            }).mount();
        });
    </script>
    
    <script src="https://unpkg.com/@splidejs/splide/dist/js/splide.min.js"></script>
</body>
</html>
