{% extends 'base.html.twig' %}

{% block title %}Évènements{% endblock %}

{% block body %}
    <div class="page page-events">
        <section class="about-us pb-4">
            <div class="container">
                <h2 class="about-us-title">Évènements à venir</h2>
                <p class="about-us-text">
                    Découvrez ici tous nos bons plans, actualités, informations et bien sûr, tous nos évènements.

                <p>
            </div>
        </section>
        <section class="events pb-5">
            <div class="container">
                <div class="row">
                    {% for event in events %}
                        <div class="col-md-4 mb-4">
                            <a href="{{ path('event_show', {'id': event.id}) }}" class="event-card">
                                <div class="event-card__bg">
                                    <img src="{{ asset( 'images/' ~ event.media ) }}" alt="Logo"/>
                                </div>
                                <div class="event-card__overlay"></div>
                                <div class="event-card__content">
                                    <div class="event-card__title">
                                        {{ event.title }}
                                    </div>
                                    <div class="event-card__date">
                                        {{ event.date|date("m/d/Y") }}
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>

{% endblock %}
